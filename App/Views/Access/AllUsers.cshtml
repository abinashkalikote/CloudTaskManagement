@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "All Users";
}


<div class="card">
    <div class="card-header">
        <h1>All Users</h1>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>IsAdmin</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.IsAdmin</td>
                            <td>@item.Status</td>
                            <td>Deactivate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>